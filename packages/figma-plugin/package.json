{
  "name": "@floranodus/figma-plugin",
  "version": "2.0.0",
  "description": "Unified Figma Bridge - TypeScript Production Server with Smart Tunnel Auto-Detection",
  "main": "dist/clean-main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/main.js",
    "dev": "tsx src/main.ts",
    "watch": "tsx watch src/main.ts",
    "clean": "rm -rf dist",
    "start:bridge": "node start-smart-tunnel.js",
    "start:production": "npm run start",
    "start:typescript": "tsx src/clean-main.ts",
    "start:javascript": "node server/bridge-server.js",
    "test": "node tests/test-unified-bridge.js",
    "test:comprehensive": "node tests/test-media-asset-support.js && node tests/test-unified-bridge.js",
    "demo:media": "node scripts/create-media-asset-demo.js",
    "demo:organization": "node scripts/create-page-organization-demo.js",
    "demo:smart": "node scripts/create-smart-organization-demo.js",
    "demo:ui-kit": "node scripts/create-ui-kit-demo.js",
    "health": "curl -s http://localhost:3000/health | jq",
    "status": "curl -s http://localhost:3000/status | jq"
  },
  "keywords": [
    "figma",
    "mcp",
    "unified-bridge",
    "automation",
    "api",
    "design",
    "typescript",
    "smart-tunnel",
    "auto-detection"
  ],
  "author": "Figma Unified Bridge Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "node-fetch": "^3.3.2",
    "puppeteer": "^24.10.2",
    "uuid": "^11.0.6",
    "ws": "^8.18.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.5",
    "@types/uuid": "^9.0.8",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
